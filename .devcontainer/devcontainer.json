{
	"name": "Nostr Python Dev",
	"image": "mcr.microsoft.com/devcontainers/python:3.11",
	"features": {
	  "python": "latest"
	},
	"postCreateCommand": "python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
	"customizations": {
	  "vscode": {
		"settings": {
		  "python.defaultInterpreterPath": "/workspaces/nostr/venv/bin/python3"
		},
		"extensions": [
		  "ms-python.python",
		  "ms-python.vscode-pylance"
		]
	  }
	},
	"remoteUser": "vscode"
  }